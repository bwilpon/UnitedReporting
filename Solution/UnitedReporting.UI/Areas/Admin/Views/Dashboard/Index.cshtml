@model UnitedReporting.UI.Areas.Admin.Models.DashboardViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Dashboard</h1>

<h2>Schedule Service Requests</h2>
<table>
   
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Firm Name
        </th>
        <th>
            Phone
        </th>
        <th>
            Email
        </th>
        <th>
            Created On
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Contacts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirmName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @item.CreatedOn.AddHours(3)
            </td>
            <td>
                @Html.ActionLink("Details", "ScheduleServiceDetails", new { id=item.Id })
            </td>
        </tr>
    }
</table>

<h2>Transcript Orders</h2>
<table>
    <tr>
        <th>Ordering Attorney</th>
        <th>Firm Name</th>
        <th>Date Needed</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Created On</th>
        <th></th>
    </tr>
    @foreach (var order in Model.TranscriptOrders)
    {
        <tr>
            <td>@order.OrderingAttorney</td>
            <td>@order.FirmName</td>
            <td>@order.DateNeeded</td>
            <td>@order.Phone</td>
            <td>@order.Email</td>
            <td>@order.CreatedOn.AddHours(3)</td>
            <td>
                @Html.ActionLink("Details", "TranscriptOrderDetails", new { id = order.Id })
            </td>
        </tr>
    }

</table>